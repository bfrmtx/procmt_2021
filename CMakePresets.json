{
  "version": 8,
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "debug procmt",
      "description": "Sets Ninja generator, build and install directory",
      "generator": "Ninja",
      "binaryDir": "${env:HOME}/build/procmt/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "/usr/local/procmt",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    }
  ]
}